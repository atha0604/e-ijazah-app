{
  "name": "aplikasi-nilai-e-ijazah",
  "version": "2.7.0",
  "description": "Aplikasi Nilai E-Ijazah - Sistem Pengelolaan Nilai Sekolah Dasar",
  "main": "app-native.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --config webpack.prod.config.js --progress",
    "build:prod": "webpack --config webpack.prod.config.js --progress",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:analyze": "webpack --config webpack.prod.config.js --progress --json > stats.json && echo \"Build stats saved to stats.json. Upload to webpack.github.io/analyse\"",
    "serve": "webpack serve --mode development --port 3001",
    "test": "echo \"Error: no test specified\" && exit 1",
    "native": "node app-native.js",
    "offline": "node app-native.js --offline",
    "online": "node app-native.js --online",
    "dist": "npm run package",
    "package": "node build-native.js",
    "build-exe": "node build-executable.js",
    "build-standalone": "node build-standalone.js"
  },
  "keywords": [
    "e-ijazah",
    "sekolah",
    "pendidikan",
    "nilai"
  ],
  "author": "Prasetya Lukmana",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql": "^2.18.1",
    "nodemailer": "^7.0.6",
    "openai": "^5.21.0",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "archiver": "^7.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "pkg": "^5.8.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "src/**/*",
      "assets/**/*",
      "*.md",
      "*.txt"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
