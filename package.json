{
  "name": "aplikasi-nilai-e-ijazah",
  "version": "2.6.0",
  "description": "Aplikasi Nilai E-Ijazah - Sistem Pengelolaan Nilai Sekolah Dasar",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build complete - no build steps required'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "npx electron .",
    "electron-dev": "npx electron . --dev",
    "build-win": "npx electron-builder --win",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "npm run build-win"
  },
  "keywords": [
    "e-ijazah",
    "sekolah",
    "pendidikan",
    "nilai"
  ],
  "author": "Prasetya Lukmana",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql": "^2.18.1",
    "openai": "^5.21.0",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "appId": "com.aplikasi-nilai-e-ijazah.app",
    "productName": "Aplikasi Nilai E-Ijazah",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/electron/**/*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "win": {
      "target": "dir",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aplikasi Nilai E-Ijazah"
    }
  }
}
